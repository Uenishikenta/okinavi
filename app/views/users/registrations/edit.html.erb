
<%= stylesheet_link_tag 'inform_edit', :media => "all" %>

<div class="card">

  <div class="login-element">

    <div class="login-title">
      <h1>My page уиежЏє</h1>
      <p>Рђ╗сЃЌсЃГсЃЋсѓБсЃ╝сЃФсѓёућ╗тЃЈсѓњУеГт«џсЂЌсЂдсЂЈсЂасЂЋсЂё</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <!--сѓбсѓФсѓдсЃ│сЃѕуиежЏєТЎѓсЂФсЃЌсЃГсЃЋсѓБсЃ╝сЃФсѓњтЁЦтіЏсЂДсЂЇсѓІсѓѕсЂєсЂФсЃЋсѓЕсЃ╝сЃасѓњУ┐йтіа-->
      <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_area :profile, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> ТќЄтГЌтЁЦсѓїсЂдсЂЈсЂасЂЋсЂё</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update­ЪЊю" %>
      </div>
    <% end %>

    <%= link_to "Back", :back %>
  </div>
</div>


