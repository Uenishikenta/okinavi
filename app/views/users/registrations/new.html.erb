<%= stylesheet_link_tag 'inform', :media => "all" %>

<div class="card">

  <div class="login-element">

    <div class="login-title">
      <h2>新規登録</h2>
      <p>e-メールとパスワードを決めてね</p>
    </div>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字入れる)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :確認用 %><br />
        <%= f.password_field :確認用, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "☞ 新規登録 ☜" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>